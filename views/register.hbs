{{> message}}

<h3 class="m-4">Register</h3>


<form action="/users" method="post" class="m-4">

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" name="name" class="form-control" id="name">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control" id="email">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="password">
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" name="confirmPassword" class="form-control" id="confirmPassword">
        </div>
    </div>

    <button type="submit" class="btn btn-primary mb-3" style="display: block;">Register</button>

    <span>Already have an account?<a class="ms-1" href="/login">login</a></span>

</form>