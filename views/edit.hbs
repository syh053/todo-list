<form action="/todos/{{todo.id}}?_method=PUT" method="POST">
    <div class="container text-center ms-3 mt-3 ">
        <div class="row">
            <div class="col-sm-2">
                <input type="text" class="form-control" name="name" value="{{todo.name}}">
            </div>
            <div class="col-sm-1">
                <button type="submit" class="btn btn-info btn-sm me-3">Save</button>
            </div>
            <div class="col-sm-1">
                <a href="/todos">Back</a>
            </div>   
        </div>
    </div>
</form>